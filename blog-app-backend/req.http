POST http://localhost:4000/user-api/users
Content-Type: application/json

{
    "firstName":"vikas",
    "lastName":"bandaru",
    "email":"cikas@gmail.com",
    "password":"User@1234",
    "profileImageUrl":"https://www.wikihow.com/Get-the-URL-for-Pictures"
}

